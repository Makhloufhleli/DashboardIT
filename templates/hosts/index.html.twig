{% extends 'base.html.twig' %}

{% block title %}Hosts{% endblock %}
{% block stylsheets %}

{{ parent() }}
{% endblock %}
{% block body %}

<div class="page-wrapper">
    <div class="page-header">
        <div class="page-header-title">
            <h4>Hosts</h4>
        </div>
        <div class="page-header-breadcrumb">
            <ul class="breadcrumb-title">
                <li class="breadcrumb-item">
                    <a href="index.html">
                        <i class="icofont icofont-home"></i>
                    </a>
                </li>
                <li class="breadcrumb-item"><a href="#!">Pages</a>
                </li>
                <li class="breadcrumb-item"><a href="#!">Hosts</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="page-body">
        <div class="row">
            <div class="col">
                <!-- table card start -->
                <div class="card">
                    <div class="card-header">
                        <h5>Hosts list</h5>

                        <div class="card-header-right">
                            <i class="icofont icofont-rounded-down"></i>
                            <i class="icofont icofont-refresh"></i>
                            <i class="icofont icofont-close-circled"></i>
                        </div>
                    </div>
                    <div class="card-block">


                        <div class="row">
                            <div class="col col-lg-12">

                                <button type="button" class="btn btn-primary float-right waves-effect"
                                    data-toggle="modal" data-target="#large-Modal"><i class="icon-plus"></i></button>
                                <div class="modal fade" id="large-Modal" tabindex="-1" role="dialog"
                                    style="width: 100%">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h4 class="modal-title">Add New Host</h4>
                                            </div>
                                            <div class="modal-body">
                                                {{form_start(form)}}
                                                <div class="card">
                                                    <div class="form-group row">
                                                        <label class="col-sm-3 col-form-label">Name:</label>
                                                        <div class="col-sm-7">
                                                            {{form_widget(form.name)}}
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-sm-3 col-form-label">Cdn:</label>
                                                        <div class="col-sm-7">
                                                            {{form_widget(form.cdn)}}
                                                        </div>
                                                    </div>

                                                    <div class="form-group row">
                                                        <label class="col-sm-3 col-form-label">Site:</label>
                                                        <div class="col-sm-7">
                                                            {{form_widget(form.sites)}}
                                                        </div>
                                                    </div>

                                                    <div class="form-group row">
                                                        <label class="col-sm-3 col-form-label">Database link:</label>
                                                        <div class="col-sm-7">
                                                            {{form_widget(form.databasesLinks)}}
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-sm-3 col-form-label">Backup:</label>
                                                        <div class="col-sm-7">
                                                            {{form_widget(form.backups)}}
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-sm-3 col-form-label">Disc space:</label>
                                                        <div class="col-sm-7">
                                                            {{form_widget(form.discSpace)}}
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-sm-3 col-form-label">PHP version</label>
                                                        <div class="col-sm-7">
                                                            {{form_widget(form.phpVersion)}}
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-sm-3 col-form-label">Certificate:</label>
                                                        <div class="col-sm-7">
                                                            {{form_widget(form.certificate)}}
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-sm-3 col-form-label">Apache/Nginx:</label>
                                                        <div class="col-sm-7">
                                                            {{form_widget(form.apache_nginx)}}
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-sm-3 col-form-label">Admin manager:</label>
                                                        <div class="col-sm-7">
                                                            {{form_widget(form.adminManager)}}
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-sm-3 col-form-label">Technocal
                                                            manager:</label>
                                                        <div class="col-sm-7">
                                                            {{form_widget(form.technicalManager)}}
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-sm-3 col-form-label">Billing manager:</label>
                                                        <div class="col-sm-7">
                                                            {{form_widget(form.billingManager)}}
                                                        </div>
                                                    </div>
                                                </div>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default waves-effect "
                                                        data-dismiss="modal">Close</button>
                                                    <button type="button"
                                                        class="btn btn-primary waves-effect waves-light ">Save</button>
                                                </div>
                                                {{form_end(form)}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                </li>
                                <li>

                            </div>

                        </div>

                        <div class="dt-responsive table-responsive">
                            <table id="simpletable" class="table table-striped table-bordered nowrap">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>CDN</th>
                                        <th>Sites</th>
                                        <th>DatabBsesLinks</th>
                                        <th>Backups</th>
                                        <th>Actions</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        {% for host in hosts %}
                                        <td>{{ host.name }}</td>
                                        <td>{{ host.cdn }}</td>
                                        <td>
                                            {% for site in host.sites %}
                                            {{ site }}<br />
                                            {% endfor %}
                                        </td>
                                        <td>
                                            {% for database in host.databasesLinks %}
                                            <span class="badge badge-success">
                                                {{ database }}
                                            </span><br />
                                            {% endfor %}
                                        </td>
                                        <td>
                                            {% for backup in host.backups %}
                                            {{ backup }}<br />
                                            {% endfor %}
                                        </td>
                                        <td>
                                            <div class="row-sm-12">
                                                <div class="col">
                                                    <button class="btn btn-danger btn-sm float-right "><i
                                                            class="icon-trash"></i></button>
                                                    <button class="btn btn-warning btn-sm float-right "><i
                                                            class="icon-pencil"></i></button>
                                                </div>
                                            </div>
                                        </td>
                                        {% endfor %}
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- table card end -->
            </div>



        </div>
    </div>

    {% endblock %}